#!/bin/bash -e

function doit {
    GREEN='\033[0;32m'
    RESET='\033[0m'
    echo
    echo -e "${GREEN}$ $1"
    echo -e "-------------------------------------------------------------------------------------------------------------${RESET}"
    eval $1
}

branch=$(git rev-parse --abbrev-ref HEAD)

if ! git diff-index --quiet HEAD --; then
    # Commit all changes
    doit "git commit -am \"fixup! WIP\""
fi

# Pushes changes to the server
doit "git push origin $branch"

# Starts the associated job.
doit "inv job_start"
